<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
			 xmlns:tools="http://schemas.android.com/tools"
			 android:layout_width="match_parent"
			 android:layout_height="match_parent"
			 android:paddingLeft="@dimen/activity_horizontal_margin"
			 android:paddingRight="@dimen/activity_horizontal_margin"
			 android:paddingTop="@dimen/activity_vertical_margin"
			 android:paddingBottom="@dimen/activity_vertical_margin"
			 android:background="#4fbeea"
			 tools:context=".GameWindow">



	<ImageView
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:layout_gravity="center"
		android:id="@+id/gridImage"
		android:src="@drawable/grid"
		android:contentDescription="@null"/>


	<RelativeLayout
		android:layout_width="match_parent"
		android:layout_height="match_parent"
		android:layout_gravity="center">


		<Button
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:text=" "
			android:background="@null"
			android:id="@+id/button11"
			android:layout_centerVertical="true"
			android:layout_centerHorizontal="true"
			android:onClick="buttonOnClick"/>

		<Button
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:text=" "
			android:background="@null"
			android:id="@+id/button00"
			android:layout_above="@+id/button11"
			android:layout_toLeftOf="@+id/button11"
			android:onClick="buttonOnClick"
			android:layout_margin="-4dp"/>

		<Button
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:text=" "
			android:background="@null"
			android:id="@+id/button01"
			android:layout_above="@+id/button11"
			android:layout_alignLeft="@+id/button11"
			android:layout_alignRight="@+id/button11"
			android:onClick="buttonOnClick"/>

		<Button
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:text=" "
			android:background="@null"
			android:id="@+id/button02"
			android:layout_toEndOf="@+id/button01"
			android:layout_above="@+id/button11"
			android:layout_toRightOf="@+id/button11"
			android:onClick="buttonOnClick"/>

		<Button
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:text=" "
			android:background="@null"
			android:id="@+id/button10"
			android:layout_toLeftOf="@+id/button11"
			android:layout_toStartOf="@+id/button11"
			android:layout_alignBottom="@+id/button11"
			android:layout_alignTop="@+id/button11"
			android:onClick="buttonOnClick"/>

		<Button
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:text=" "
			android:background="@null"
			android:id="@+id/button12"
			android:layout_alignBottom="@+id/button11"
			android:layout_alignTop="@+id/button11"
			android:layout_toRightOf="@+id/button11"
			android:layout_toEndOf="@+id/button11"
			android:onClick="buttonOnClick"/>

		<Button
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:text=" "
			android:background="@null"
			android:id="@+id/button20"
			android:layout_below="@+id/button11"
			android:layout_toLeftOf="@+id/button11"
			android:layout_toStartOf="@+id/button11"
			android:onClick="buttonOnClick"/>

		<Button
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:text=" "
			android:background="@null"
			android:id="@+id/button21"
			android:layout_below="@+id/button11"
			android:layout_alignLeft="@+id/button11"
			android:layout_alignRight="@+id/button11"
			android:onClick="buttonOnClick"/>

		<Button
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:text=" "
			android:background="@null"
			android:id="@+id/button22"
			android:layout_below="@+id/button11"
			android:layout_toRightOf="@+id/button11"
			android:onClick="buttonOnClick"/>


	</RelativeLayout>

	<Button
		android:text="Reset"
		android:id="@+id/resetButton"
		android:layout_gravity="left|bottom"
		android:layout_margin="11dp"

		android:textColor="#FFFFFF"
		android:layout_width="120dp"
		android:layout_height="50dp"
		android:background="@drawable/button_shape_style1"
		android:shadowColor="#0A05A8"
		android:shadowDx="3"
		android:shadowDy="0"
		android:shadowRadius="5"
		android:clickable="true"
		android:onClick="onResetClick"/>

	<Button
		android:text="Main Menu"
		android:id="@+id/menuButton"
		android:layout_gravity="right|bottom"
		android:layout_margin="11dp"

		android:textColor="#FFFFFF"
		android:layout_width="120dp"
		android:layout_height="50dp"
		android:background="@drawable/button_shape_style1"
		android:shadowColor="#0A05A8"
		android:shadowDx="3"
		android:shadowDy="0"
		android:shadowRadius="5"/>

	<TextView
		android:layout_width="148dp"
		android:layout_height="151dp"
		android:textAppearance="?android:attr/textAppearanceLarge"
		android:text="Status goes here"
		android:id="@+id/statusText"
		android:layout_alignParentTop="true"
		android:layout_centerHorizontal="true"
		android:layout_marginTop="28dp"
		android:layout_gravity="left|top"
		android:textStyle="bold"
		android:textColor="#A33E38"
		android:textColorHighlight="@color/background_material_light"
		android:textSize="35dp"/>

	<ImageView
		android:layout_width="180dp"
		android:layout_height="60dp"
		android:id="@+id/gameModeImage"
		android:layout_gravity="right|top"
		android:src="@drawable/vs_human"
		android:layout_below="@+id/button20"
		android:layout_alignParentRight="true"
		android:layout_alignParentEnd="true"
		android:layout_marginEnd="30dp"
		android:layout_marginRight="-10dp"
		android:layout_marginTop="50dp"/>


</FrameLayout>
